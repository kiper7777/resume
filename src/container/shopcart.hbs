  <div>
    {{#with goodsOtherBlock}}
    <h3 class="text-center">{{title}}</h3>
    <br>
    <div class='row'>
        {{#each cards}}
                <div class='col-4'>
                {{> shopcard}}
                </div>
        {{/each}}
    </div>
    {{/with}}
  </div>
