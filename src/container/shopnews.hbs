<section>
    {{#with navigation}}
      <ul class='nav'>
        {{#each links}}
          <li class='nav-item'>
            {{#if @last}} 
            <a class='nav-link disabled'>{{text}}</a>
            {{else}}
            <a
              class='nav-link'
              aria-current='page'
              href={{href}}
            >{{text}}</a>
            {{/if}}
          </li>
        {{/each}}
      </ul>
    {{/with}}
</section>

<section>
  {{#with newsData}}
  <div class="card mb-4">
    <img src="{{photo}}" class="card-img-top" alt="...">
    <div>
      <div class="card-head p-1">
        {{#with head}}  
          <h1 class="card-title">{{heading}}</h5>
          <p class="card-text">{{description}}</p>
        {{/with}} 
      </div>
      <br>
      <div class="card-body p-1">
        {{#each body}}
        <h4>{{title}}</h1>
        <p>{{text}}</p>
        {{/each}}
      </div>
    </div>
  </div>
  {{/with}}
</section>

<section>
  {{#with newsOtherBlock}}
    <h2 class='text-center'>{{title}}</h2>
<br>
    <div class='row'>
      {{#each cards}}
        <div class='col-3'>
          <div class='card text-bg-light'>
            <div class='card-header'>{{title}}
              {{#if isTop}}<span class='badge text-bg-danger'
                >Top</span>{{/if}}
              {{#if isNew}}<span class='badge text-bg-success'
                >New</span>{{/if}}
            </div>
            <div class='card-body'>
              <p class='card-text'>{{description}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{/with}}
</section>
<hr />
<br>
<section>
  <div class="card text-bg-success" >
    {{#with service}}
    <div class="card-body text-center">
      <p class="h2">{{title}}</p>
      <p class="card-text">{{description}}</p>
      <div>
         {{#each buttons}}
          <a href={{link}} class="btn btn-primary">{{text}}</a>
         {{/each}} 
      </div>   
    </div>
    {{/with}}
  </div>
</section>
<br>
<hr>








