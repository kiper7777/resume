<section>
  <div class='card'>
    {{#with navigation}}
      <nav class='nav'>
        {{#each links}}
          <li class='nav-item'>
            <a
              class='nav-link'
              aria-current='page'
              href={{href}}
            >{{text}}</a>
          </li>
        {{/each}}
        <li class='nav-item'>
          <a class='nav-link disabled'>Disabled</a>
        </li>
      </nav>
    {{/with}}
  </div>
</section>
<section>
<div>
    <h1>{{header}}</h1>
</div>
</section>
<br />
<div>
<section>
    {{#with contacts_data}}
      <h3>{{title}}</h3>

      <div>
        {{#each buttons}}
          <div class='btn'>
            {{#if isPrimary}}
              <span class='btn bg-warning text-light'
              >{{text}}</span>{{/if}}
            {{#if isOutline}}
              <span
                class='btn btn-outline-warning'
              >{{text}}</span>{{/if}}
          </div>
        {{/each}}
      </div> 

			<div class="row g-5">
				<div class="col-6">
					{{#with form}}
  					{{#with input}}
                <div class="row">
                    <div class="col-6">
                    {{#with surname}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder={{placeholder}}>
                        <div class="form-text">{{caption}}</div>
                    {{/with}}
                    </div>
                    <div class="col-6">
                    {{#with name}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder={{placeholder}}>
                        <div class="form-text">{{caption}}</div>
                    {{/with}}
                    </div>
                    <div class="col-6">
                    {{#with phone}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder={{placeholder}}>
                        <div class="form-text">{{caption}}</div>
                    {{/with}}
                    </div>
                    <div class="col-6">
                    {{#with email}}
                        <label class="form-label">{{label}}</label>
                        <input class="form-control" placeholder={{placeholder}}>
                        <div class="form-text">{{caption}}</div>
                    {{/with}}
                    </div>
                </div>         
						{{/with}}
 					{{/with}}
				</div>
			</div>
      <hr>
      <div class="mb-2">
        {{#each form.switch}}
          <div class="form-check form-switch mt-2 pb-1">
            <label class="form-check-label">{{text}}</label>
            <input name="choose" class="form-check-input" type="checkbox" {{#if isActive}}checked{{/if}}>
          </div> 
        {{/each}}
      </div>
      <hr>	 
    {{/with}}
 </section>
 
 
 