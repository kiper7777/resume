<div>
  <p>{{main.education.text}}</p>
</div>
<div>
  {{#with main}}
    <main>
      <section>
		     {{> title data="My educations" big=true}}
        <ul>
          {{#each educations}}
            <li>
              {{name}}

              {{#unless isEnd}} (ще в процесі) {{/unless}}
            </li> 
          {{/each}}
        </ul>
      </section>
      <section>
        {{> title data="My sertificates"}}
        <ul>
          {{#each sertificates}}
             <li>
              {{name}} ({{id}})
             </li>
          {{/each}}
        </ul>
      </section>
    </main>
  {{/with}}
</div>
      