<section>
  <div class='card'>
    {{#with navigation}}
      <nav class='nav'>
        {{#each links}}
          <li class='nav-item'>
            <a
              class='nav-link'
              aria-current='page'
              href='{{href}}'
            >{{text}}</a>
          </li>
        {{/each}}
        <li class='nav-item'>
          <a class='nav-link disabled'>Disabled</a>
        </li>
      </nav>
    {{/with}}
  </div>
</section>

<section>
  {{#with newsBlock}}
    <h2 class='text-center'>{{title}}</h2>

    <div class='row'>
      {{#each cards}}
        <div class='col-3'>
          <div class='card text-bg-light'>
            <div class='card-header'>{{title}}
              {{#if isTop}}<span
                  class='badge text-bg-danger'
                >Top</span>{{/if}}
              {{#if isNew}}<span
                  class='badge text-bg-success'
                >New</span>{{/if}}
            </div>
            <div class='card-body'>
              <p class='card-text'>{{description}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{/with}}
</section>
<hr />

<section>
  <div>
      {{#with goodsBlock}}
        <ul class='nav nav-tabs'>
            {{#each tabs}}
              <li class='nav-item'>
                <a class='nav-link {{#if isActive}}active{{/if}} {{#if isDisabled}}disabled{{/if}}' 
                aria-current='page' 
                href='#'>{{text}}</a>
              </li>
            {{/each}}
        </ul>
      {{/with}}
    </ul>
  </div>
</section>

<section>
  <div class='row'>
    {{#each cards}}
          <div class='col-4'>
            <div class='card'>
              <img
                href={{image}}
                class='card-img-top'/>

              <div class='card-body'>
                <h5 class='card-title' 
                {{#if isHot}}<span class="badge bg-warning text-light">HOT</span>{{/if}}
                {{#if isNew}}<span class="badge bg-primary text-light">New</span>{{/if}}
                >{{title}}</h5>
                <p class='card-text'>{{description}}</p>
              </div>
            </div>
          </div>
       </div>
    {{/each}}
  </div>
</section>




